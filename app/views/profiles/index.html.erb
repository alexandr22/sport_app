<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Allow create training</th>
      <th>Name</th>
      <th>Age</th>
      <th>User</th>
      <th>Is trainer</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Stage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.allow_create_training %></td>
        <td><%= profile.name %></td>
        <td><%= profile.age %></td>
        <td><%= profile.user_id %></td>
        <td><%= profile.is_trainer %></td>
        <td><%= profile.weight %></td>
        <td><%= profile.height %></td>
        <td><%= profile.stage %></td>
        <td><%= link_to 'Показать', profile %></td>
        <td><%= link_to 'Редактировать', edit_profile_path(profile) %></td>
        <td><%= link_to 'Удалить', profile, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

